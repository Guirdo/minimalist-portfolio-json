---
import LanguagePicker from "./LanguagePicker.astro";
import MenuDialog from "./MenuDialog.astro";
---

<footer class="no-print">
    <MenuDialog />
    <LanguagePicker />
</footer>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    footer {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        justify-content: center;
        align-items: center;

        background: #fdfdfd;
        border-top: 1px solid #eee;
        position: fixed;
        bottom: 0;
        width: 100%;
        margin: auto;
        padding-block: 0.75rem;
        text-align: center;
        font-size: 1rem;
        font-weight: 500;

        view-timeline-name: --revealing;
        view-timeline-axis: block;

        animation: linear 0.3s fadeIn;
        animation-timeline: --revealing;
        animation-range: entry 100% cover 10%;
    }
</style>
