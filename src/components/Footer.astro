---
import LanguagePicker from "./LanguagePicker.astro";
import Menu from "@/icons/Menu.astro";
---

<footer class="no-print">
    <button id="menuBtn">
        <Menu />
        Men√∫
    </button>
    <LanguagePicker />
</footer>

<style>
    #menuBtn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap:0.25rem;
        background-color: #eee;
        border: 1px solid #ccc;
        padding: 0.25rem;
        border-radius: 0.25rem;
        font-weight: 500;
        font-size: 1rem;
    }

    #menuBtn > svg {
        width: 0.9em;
        height: 0.9em;
        fill: currentcolor;
        margin-right: 0.5em;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    footer {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        justify-content: center;
        align-items: center;

        background: #fdfdfd;
        border-top: 1px solid #eee;
        position: fixed;
        bottom: 0;
        width: 100%;
        margin: auto;
        padding-block: 0.75rem;
        text-align: center;
        font-size: 1rem;
        font-weight: 500;

        view-timeline-name: --revealing;
        view-timeline-axis: block;

        animation: linear 0.3s fadeIn;
        animation-timeline: --revealing;
        animation-range: entry 100% cover 10%;
    }
</style>
